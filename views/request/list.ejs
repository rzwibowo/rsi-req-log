<% include ../_layout/header %>

<div id="app">
    <section class="hero is-light">
        <div class="hero-body">
            <div class="container">
                <h1 class="title">
                    Daftar Request
                </h1>
            </div>
        </div>
    </section>

    <div class="columns">
        <div class="column is-narrow">
            <div class="field">
                <label class="label">Tampilkan baris</label>
                <div class="control">
                    <div class="select">
                        <select v-model="baris" @change="setBaris">
                            <option value="5">5</option>
                            <option value="10">10</option>
                            <option value="20">20</option>
                            <option :value="jml_data">Semua [{{jml_data}}]</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="columns is-centered">
        <div class="column is-narrow is-striped table-container" style="overflow-x: auto;">
            <table class="table is-fullwidth">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Tanggal</th>
                        <th>Jam Lapor</th>
                        <th>Jam Selesai</th>
                        <th>Unit</th>
                        <th style="width: 15em;">Isi Request</th>
                        <th style="width: 15em;">Keterangan dan RTL</th>
                        <th>Petugas</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <td colspan="6"></td>
                        <td>
                            Data ke 
                            <b>{{ awal + 1 }} - {{ akhir >= jml_data ? jml_data : akhir }}</b>
                            dari 
                            <b>{{ jml_data }}</b> data
                        </td>
                        <td>
                            <button type="button" class="button" 
                                :disabled="awal === 0"
                                @click="pageNav(0)">
                                <span class="icon is-medium">
                                    <i class="fas fa-angle-left"></i>
                                </span>
                            </button>
                            <button type="button" class="button"
                                :disabled="akhir >= jml_data"
                                @click="pageNav(1)">
                                <span class="icon is-medium">
                                    <i class="fas fa-angle-right"></i>
                                </span>
                            </button>
                        </td>
                    </tr>
                </tfoot>
                <tbody>
                    <tr v-for="(req, index) in requests" :key="index">
                        <td>{{ req.id_request }}</td>
                        <td>{{ req.tanggal | fmtTanggal }}</td>
                        <td>{{ req.jam_lapor }}</td>
                        <td>{{ req.jam_selesai }}</td>
                        <td>{{ req.nama_unit }}</td>
                        <td>{{ req.isi_request }}</td>
                        <td>
                            {{ req.keterangan }}
                            <br>
                            <template v-if="req.rencanatl">
                                <b>RTL:</b> {{ req.rencanatl }}
                            </template>
                        </td>
                        <td>{{ req.petugas }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

<script src="/js/axios.min.js"></script>
<script src="/js/request/list.js"></script>

<% include ../_layout/footer %>