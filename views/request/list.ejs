<% include ../_layout/header %>

<div id="app">
    <section class="hero is-light">
        <div class="hero-body">
            <div class="container">
                <h1 class="title">
                    Daftar Request
                </h1>
            </div>
        </div>
    </section>

    <div class="columns is-centered">
        <div class="column is-narrow is-striped table-contaner" style="overflow-x: auto;">
            <table class="table is-fullwidth">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Tanggal</th>
                        <th>Jam Lapor</th>
                        <th>Jam Selesai</th>
                        <th>Unit</th>
                        <th style="width: 15em;">Isi Request</th>
                        <th style="width: 15em;">Keterangan dan RTL</th>
                        <th>Petugas</th>
                    </tr>
                </thead>
                <tbody>
                    <tr v-for="(req, index) in requests" :key="index">
                        <td>{{ req.id_request }}</td>
                        <td>{{ req.tanggal | fmtTanggal }}</td>
                        <td>{{ req.jam_lapor }}</td>
                        <td>{{ req.jam_selesai }}</td>
                        <td>{{ req.nama_unit }}</td>
                        <td>{{ req.isi_request }}</td>
                        <td>
                            {{ req.keterangan }}
                            <br>
                            <template v-if="req.rencanatl">
                                <b>RTL:</b> {{ req.rencanatl }}
                            </template>
                        </td>
                        <td>{{ req.petugas }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

<script src="/js/axios.min.js"></script>
<script src="/js/request/list.js"></script>

<% include ../_layout/footer %>