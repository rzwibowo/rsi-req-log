<% include ../_layout/header %>
<section class="hero is-light">
    <div class="hero-body">
        <div class="container">
            <h1 class="title">
                Daftar Unit
            </h1>
        </div>
    </div>
</section>
    
<div id="app">
    <div class="columns is-centered">
        <div class="column is-narrow" style="overflow-x: auto;">
            <table class="table is-hoverable is-fullwidth">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nama Unit</th>
                        <th>Opsi</th>
                    </tr>
                </thead>
                <tbody>
                    <tr v-for="(unit, index) of units" :key="index">
                        <td>{{ unit.id_unit }}</td>
                        <td>{{ unit.nama_unit }}</td>
                        <td>
                            <button class="button is-text" @click="editUnit(unit.id_unit)" title="Ubah">
                                <i class="fas fa-edit"></i>
                            </button>
                            <button class="button is-text has-text-danger" @click="deleteUnit(unit.id_unit)" title="Hapus">
                                <i class="fas fa-trash"></i>
                            </button>
                        </td>
                    </tr>
                </tbody>
            </table>
            <div class="field is-grouped is-grouped-right">
                <div class="control">
                    <button @click="toggleForm" class="button is-primary">
                        <span class="icon is-small"> <i class="fas fa-plus"></i> </span>
                        <span> Tambah Unit </span>
                    </button>
                </div>
            </div>

            <div class="modal" :class="{ 'is-active': open }">
                <div class="modal-background"></div>
                <div class="modal-card">
                    <header class="modal-card-head">
                        <p class="modal-card-title">{{ headerModal }} Unit</p>
                        <button class="delete" aria-label="close" @click="toggleForm"></button>
                    </header>
                    <section class="modal-card-body">
                        <form>
                            <div class="field">
                                <label class="label">Nama Unit:</label>
                                <div class="control">
                                    <input class="input" type="text" name="nama" 
                                        v-model="unit.nama_unit" style="width: 30em"
                                        required>                                
                                </div>
                            </div>
                        </form>
                    </section>
                    <footer class="modal-card-foot" style="justify-content: flex-end">
                        <button class="button" @click="toggleForm">Batal</button>
                        <button class="button is-primary" type="submit" @click="saveUnit(unit.id_unit)">Simpan</button>
                    </footer>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="/js/axios.min.js"></script>
<script src="/js/unit/index.js"></script>

<% include ../_layout/footer %>
